<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/login.activity.background"
        >

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/activity.login.explain"
              android:padding="15dp"
              android:textSize="18sp"
              android:textColor="@android:color/white"
              android:layout_alignParentTop="true"
              android:layout_marginTop="20dp"
            />

    <TextView android:id="@+id/login_important"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/activity.login.important"
              android:padding="30dp"
              android:textSize="16sp"
              android:textColor="@android:color/white"
              android:layout_alignParentBottom="true"
            />

    <Button android:id="@+id/login_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/activity.login.button"
            android:background="@drawable/login_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_above="@id/login_important"
            />

</RelativeLayout>