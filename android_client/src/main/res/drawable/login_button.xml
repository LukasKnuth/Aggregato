<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="4dp"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="10dp" android:left="25dp" android:right="20dp" android:top="10dp"/>
            <solid android:color="@color/login.activity.button_background_pressed"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="4dp"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="10dp" android:left="25dp" android:right="20dp" android:top="10dp"/>
            <solid android:color="@color/login.activity.button_background_focused"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="4dp"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="10dp" android:left="25dp" android:right="20dp" android:top="10dp"/>
            <solid android:color="@color/login.activity.button_background"/>
        </shape>
    </item>

</selector>

